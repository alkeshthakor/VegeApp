<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base"></style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>
        
    </style>

    <!--         <item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item> -->
    
    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>
    
    <style name="styleDrowarItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_list_item_background</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/size_14</item>
        <item name="android:paddingRight">@dimen/size_0</item>
        <item name="android:paddingTop">@dimen/size_16</item>
        <item name="android:paddingBottom">@dimen/size_16</item>
    </style>

    <style name="styleDrowarImageView">
        <item name="android:layout_width">@dimen/size_20</item>
        <item name="android:layout_height">@dimen/size_20</item>
    </style>

    <style name="styleDrowarTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/GBL2</item>
        <item name="android:textSize">@dimen/font_size_small</item>
        <item name="android:layout_marginLeft">@dimen/size_10</item>
    </style>

    <style name="textviewStyle">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>