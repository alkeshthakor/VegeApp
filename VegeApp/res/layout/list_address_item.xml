<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".ChooseAddressActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

            <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_medium" />

            <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/address1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textSize="@dimen/font_size_small" />

            <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/address2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text=""
                android:textSize="@dimen/font_size_small" />

            <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/address3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text=""
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iconlistAddress"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/icon_list_arrow" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="right" >

        <ImageView
            android:id="@+id/icoDeleteAddress"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/icon_delete" />

        <ImageView
            android:id="@+id/icoEditAddress"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:padding="10dp"
            android:src="@drawable/icon_edit" />
    </LinearLayout>

</LinearLayout>