<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp"
    tools:context=".ChooseAddressActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="15dp" >

           <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alkesh"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_size_medium" />

             <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/address1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="A/102, Pearl Park"
                android:textSize="@dimen/font_size_small" />

            <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/address2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Chharwada Road"
                 android:textSize="@dimen/font_size_small" />

            <com.cb.vmss.cusomview.TextViewCustom
                android:id="@+id/address3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Vapi - 396191"
                android:textSize="@dimen/font_size_small" />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
             <ImageView
            android:id="@+id/iconlistAddress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_list_arrow" />
             <View android:layout_width="36dp"
                 android:layout_height="0dp"
                 android:layout_weight="1"/>
              <ImageView
            android:id="@+id/icoEditAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/icon_edit" />
              

        <!-- <ImageView
            android:id="@+id/icoDeleteAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:src="@drawable/icon_edit" /> -->
        </LinearLayout>
       
    
</LinearLayout>