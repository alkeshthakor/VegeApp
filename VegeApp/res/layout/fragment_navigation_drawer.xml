<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/nav_header_User"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F5F5F6"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgPhone"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Welcome"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_location"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgLocation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_location"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F3" />

        <LinearLayout
            android:id="@+id/nav_heading_information"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

           <TextView
                android:id="@+id/txtInfomation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_healding_myiformatio"
                 android:fontFamily="sans-serif-light"
                android:textColor="#A5A5A5"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgLogin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_Login"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_address"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgAddress"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_address"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_order"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgOrder"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_order"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_cart"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgCart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtCart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_cart"
                android:textColor="#000000"
                android:textSize="15dp" />

            <RelativeLayout
                android:id="@+id/qtyCountRelLayout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_round_unread_msg_count"
                android:gravity="center"
                android:padding="1dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/txtQtyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#FFF"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F2F2F3" />

        <LinearLayout
            android:id="@+id/nav_heading_other"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

           <TextView
                android:id="@+id/txtOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_heading_others"
                android:fontFamily="sans-serif-light"
                android:textColor="#A5A5A5"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_help"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgHelp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_help"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_callus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgcallus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtCallUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_callus"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_rateus"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgRateUs"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtRateUs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_rateus"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_share"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_share"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_about"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgAbout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_about"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp" >

            <ImageView
                android:id="@+id/imgLogout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_profile"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txtLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/nav_item_logout"
                android:textColor="#000000"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>