<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sabziatdoor"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="com.sabziatdoor.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.sabziatdoor.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_app_luancher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="com.sabziatdoor.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sabziatdoor.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.ProductSelectionActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.AddAddressActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.CheckOutActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.VerifyPhoneActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.LoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.ChooseAddressActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.MyPreviousOrderActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.MyOrderDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.MyCartActivity"
            android:label="@string/title_activity_my_cart" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.sabziatdoor.OrderSuccessActivity"
            android:label="@string/title_activity_order_success"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.HelpActivity"
            android:label="@string/title_activity_help" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.sabziatdoor.AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.AboutUsActivity2"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.PrivacyPolicyActivity"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sabziatdoor.TermsConditionsActivity"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
        
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.sabziatdoor" />
            </intent-filter>
        </receiver>

        <service android:name="com.sabziatdoor.GCMIntentService" />

        <activity
            android:name="com.sabziatdoor.NotifictaionListActivity"
            android:label="@string/title_activity_notifictaion_list" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.sabziatdoor.ReferFriendActivity"
            android:label="@string/title_activity_refer_friend" 
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>